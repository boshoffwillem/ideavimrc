set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set exrc
set relativenumber
set nu
set nohlsearch
set hidden
set visualbell
set noerrorbells
set nowrap
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set scrolloff=8
set signcolumn=yes
set colorcolumn=80
set clipboard^=unnamed,unnamedplus

nnoremap <A-j> :m .+1<CR>==
nnoremap <A-k> :m .-2<CR>==
inoremap <A-j> <Esc>:m .+1<CR>==gi
inoremap <A-k> <Esc>:m .-2<CR>==gi
vnoremap <A-j> :m '>+1<CR>gv=gv
vnoremap <A-k> :m '<-2<CR>gv=gv
nnoremap Y yg$

let mapleader = " "
set ideajoin
set idearefactormode=keep

nnoremap \e :e ~/code/ideavimrc/.ideavimrc<CR>
nnoremap \r :action IdeaVim.ReloadVimRc.reload<CR>

" File actions
nnoremap <A-x> :action GotoAction<CR>
nnoremap <leader>b :action Switcher<CR>
nnoremap <leader>ff :action GotoFile<CR>
nnoremap <leader>fr :action RecentFiles<CR>

" Window actions
nnoremap <C-w>s :action SplitHorizontally<CR>
nnoremap <C-w>v :action SplitVertically<CR>
nnoremap <C-w>q :action CloseEditor<CR>
nnoremap <C-w>l :action NextSplitter<CR>
nnoremap <C-w>h :action PreviousSplitter<CR>
nnoremap <C-w>t :action ActivateTerminalToolWindow<CR>
nnoremap <C-w>u :action Unsplit<CR>
nnoremap <C-w>x :action HideAllWindows<CR>
nnoremap <C-w>z :action ToggleDistractionFreeMode<CR>

" LSP navigation commands
nnoremap <leader>ld :action GotoDeclaration<CR>
nnoremap <leader>lpd :action QuickDeclaration<CR>
nnoremap <leader>li :action GotoImplementation<CR>
nnoremap <leader>lpi :action QuickImplementation<CR>
nnoremap <leader>lu :action FindUsages<CR>
nnoremap <leader>lpu :action QuickUsages<CR>
nnoremap <leader>l- :action Back<CR>
nnoremap <leader>l= :action Forward<CR>
nnoremap <leader>lf :action FindInPath<CR>

" LSP action commands
nnoremap <C-Space> :action CodeCompletion<CR>
nnoremap <leader>lb :action ToggleLineBreakpoint<CR>
nnoremap <C-/> :action CommentByLineComment<CR>
vnoremap <C-/> :action CommentByLineComment<CR>
nnoremap <A-/> :action CommentByBlockComment<CR>
vnoremap <A-/> :action CommentByBlockComment<CR>
nnoremap <leader>lrp :action Refactorings.QuickListPopupAction<CR>
nnoremap <C-A-\>  :action ReformatCode<CR>
nnoremap <leader>lh :action QuickJavaDoc<CR>
nnoremap <leader>la :action ShowIntentionActions<CR>

" Unit test commands
nnoremap <leader>tr :action RiderUnitTestRunContextAction<CR>
nnoremap <leader>td :action RiderUnitTestDebugContextAction<CR>

" Text actions
vnoremap < <gv
vnoremap > >gv
nnoremap [[ :action MethodUp<CR>
nnoremap ]] :action MethodDown<CR>
nnoremap <leader>- :action CollapseRegion<CR>
nnoremap <leader>= :action ExpandRegion<CR>
nnoremap <leader>z- :action CollapseAllRegions<CR>
nnoremap <leader>z= :action ExpandAllRegions<CR>

" Search actions
nnoremap <leader>sf :action FindInPath<CR>
